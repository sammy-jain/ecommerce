<%- include('_layouts/header'); %>

    <div class="account-page">
      <div class="co">
        <div class="row">
          <div class="col-2">
            <div class="form-container">
              <h1 class="y">Register</h1>
              <form method="post" action="/users/register">
                <input type="text" value="<%= name  %>" name="name" class="form-control" placeholder="Name">

                    <input type="text" value="<%= email  %>" name="email" class="form-control" placeholder="Email">

                    <input type="text" value="<%= username %>" name="username" class="form-control" placeholder="Username">

                    <input type="password" name="password" class="form-control"  placeholder="Password">

                    <input type="password" name="password2" class="form-control"  placeholder="Confirm Password">

                <button type="submit" class="btn">Register</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
<%- include('_layouts/footer'); %>
